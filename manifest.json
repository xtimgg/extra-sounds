{
  "manifest_version": 3,
  "name": "Extra Sounds",
  "version": "1.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "storage", "offscreen"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["sounds/*"],
    "matches": ["<all_urls>"]
  }],
  "privacy_policy": "https://xtimgg.github.io/extra-sounds/privacy-policy/"
}
